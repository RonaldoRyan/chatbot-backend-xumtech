# .env
# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# URL de tu base de datos PostgreSQL de Supabase
DATABASE_URL="postgresql://postgres.xxxxx:tu_password@aws-0-us-east-2.pooler.supabase.com:5432/postgres"

# Para desarrollo local (opcional - si usas PostgreSQL local)
# DATABASE_URL="postgresql://postgres:password@localhost:5432/chatbot_dev"

# ===========================================
# API KEYS
# ===========================================
# Tu API Key de Cohere para el LLM
API_KEY="tu_cohere_api_key_aqui"

# API Key de Render para deployment
RENDER_API_KEY="tu_render_api_key_aqui"

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
NODE_ENV="development"

# Puerto del servidor (opcional)
PORT=3000

# ===========================================
# PRISMA CONFIGURATION (Opcional)
# ===========================================
# Solo si necesitas shadow database para desarrollo
# SHADOW_DATABASE_URL="postgresql://postgres.xxxxx:tu_password@aws-0-us-east-2.pooler.supabase.com:5432/postgres_shadow"

# ===========================================
# TESTING (Opcional - para tests locales)
