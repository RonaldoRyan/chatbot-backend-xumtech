{
  "name": "chatbot-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "lint": "eslint src/ --ext .ts --max-warnings 0",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "lint:report": "eslint . --ext .ts --format=json --output-file=eslint-report.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "code:fix": "npm run lint:fix && npm run format",
    "code:check": "npm run lint && npm run format:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:deploy": "npx prisma migrate deploy",
    "db:seed": "npx prisma db seed",
    "db:reset": "npx prisma migrate reset",
    "seed": "ts-node-dev src/prisma/seed.ts",
    "check:all": "npm run code:check && npm run test && npx tsc --noEmit",
    "quality": "npm run code:fix && npm run test:coverage",
    "audit:fix": "npm audit fix",
    "audit:check": "npm audit --audit-level=high",
    "pre-deploy": "npm run check:all && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/pg": "^8.15.5",
    "axios": "^1.10.0",
    "cohere-ai": "^7.17.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "prisma": "^6.12.0",
    "string-similarity": "^4.0.4",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@types/string-similarity": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "ts-node src/prisma/seed.ts"
  }
}
